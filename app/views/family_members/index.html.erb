<% if @family_members.size == 2 %>
<!-- Render content for the owner family member  -->
<% owner_family_member = @family_members.find { |fm| fm.relationship == 'Account
Owner' } %>
<div id="family_members">
  <div class="card" style="width: 18rem">
    <% if family_member.image.attached? %> <%= image_tag(family_member.image,
    style:"width:100%", class: "card-img-top" ).html_safe %> <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= owner_family_member.first_name %></h5>
      <p class="card-text"><%= family_member.relationship %></p>
      <%= link_to "Show", family_member, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
<%else%>
<h1>Family members</h1>
<div id="family_members">
  <% @family_members.each do |family_member| %>
  <div class="card" style="width: 18rem">
    <% if family_member.image.attached? %> <%= image_tag(family_member.image,
    style:"width:100%", class: "card-img-top" ).html_safe %> <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= family_member.first_name %></h5>
      <p class="card-text"><%= family_member.relationship %></p>
      <%= link_to "Show", family_member, class: "btn btn-secondary" %>
    </div>
  </div>
  <% end %>
</div>
<%end%> <%= link_to "New family member", new_family_member_path, class: "btn
btn-primary" %>
