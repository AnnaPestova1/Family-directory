<div class="d-flex justify-content-center flex-column align-items-center">
  <div class="container text-center">
    <div class="row text-center justify-content-center">
      <div class="col col-xs-12 col-md-8 col-lg-6 p-3">
        <%= render @family_member %>

        <div class="d-flex flex-column  justify-content-center gap-2 p-2">
          <%= link_to "Edit", edit_family_member_path(@family_member), class: "btn btn-primary", style: "width: 100%" %> 
          <%= link_to "Family members", family_members_path, class: "btn btn-primary", style: "width: 100%" %>
          <% unless @family_member.relationship == "Account Owner" || @family_member.relationship == "Family" %>
            <%= button_to "Delete", @family_member, method: :delete, class: "btn btn-primary", style:"width: 100%", data: { confirm: "Are you sure?" } %>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>