<div class="d-flex justify-content-center flex-column align-items-center">
    <div class="container text-center">
    <div class="row text-center justify-content-center">
      <div class="col col-xs-12 col-md-8 col-lg-6 p-3">

        <%= render @wishlist %>

        <div class="d-flex flex-column  justify-content-center gap-2 p-2">
          <%= link_to "Edit this wish", edit_wishlist_path(@wishlist), class: "btn btn-primary mt-3", style: "width: 100%"  %> 
          <%= link_to "Back to wish", wishlists_path, class: "btn btn-primary mt-3", style: "width: 100%"  %>

          <%= button_to "Destroy this wish", @wishlist, method: :delete, class: "btn btn-primary mt-3", style: "width: 100%"  %>
        </div>
      </div>
    </div>
  </div>
</div>
