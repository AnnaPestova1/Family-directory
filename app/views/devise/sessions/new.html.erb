<center>
    <h2>Log in</h2>
  <div  class="card p-5 d-flex flex-column gap-2" style="width: 45%;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, style: "display: block; font-weight: bold"  %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 90%" %>
      </div>

      <div class="field">
        <%= f.label :password, style: "display: block; font-weight: bold"  %><br />
        <%= f.password_field :password, autocomplete: "current-password", style: "width: 90%" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, style: "font-weight: bold" %>
        </div>
      <% end %>

      <div class="actions  mt-3">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</center>