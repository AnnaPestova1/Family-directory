<div class="d-flex justify-content-center flex-column align-items-center">
    <h2>Log in</h2>
    <div class="container text-center">
      <div class="row text-center justify-content-center">
        <div  class="card col col-xs-12 col-md-8 p-3  pb-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, style: "display: block; font-weight: bold"  %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 90%" %>
          </div>

          <div class="field">
            <%= f.label :password, style: "display: block; font-weight: bold"  %><br />
            <%= f.password_field :password, autocomplete: "current-password", style: "width: 90%" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mb-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, style: "font-weight: bold" %>
            </div>
          <% end %>

          <div class="actions mb-3">
            <%= f.submit "Log in", class: "btn btn-primary", style: "width: 90%" %>
          </div>
        <% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>